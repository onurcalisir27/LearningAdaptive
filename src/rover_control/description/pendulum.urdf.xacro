<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="pendulum">
  <xacro:include filename="$(find rover_control)/description/gazebo.xacro"/>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 1.0 0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 1.0 0.1"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1000.0"/>
      <inertia ixx="84.1666667" iyy="84.1666667" izz="166.6666667"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <joint name="pendulum_joint" type="revolute">
    <limit effort="500.0" lower="-1.3" upper="1.3" velocity="500.0"/>
    <parent link="base_link"/>
    <child link="pendulum_link"/>
    <origin xyz="0.0 0.0 0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="pendulum_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 1.0"/>
      </geometry>
      <material name="pendulum_color">
        <color rgba="0.1 0.1 0.1 1.0"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="0.05 0.05 1.0"/>
      </geometry>
    </collision>

    <inertial>
<!-- Using an aluminium bar as the pendulum link \rho=2.7 g/cm^3-->
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <mass value="6.7"/>
      <inertia ixx="2.23333" iyy="2.23333" izz="0.57229167"
               ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <ros2_control name="pendulum_control" type="system">
    <hardware>
      <plugin>gz_ros2_control/GazeboSimSystem</plugin>
    </hardware>
    <joint name="pendulum_joint">
      <command_interface name="effort"/>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

</robot>
